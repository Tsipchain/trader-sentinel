{
  "expo": {
    "name": "Trader Sentinel",
    "slug": "trader-sentinel",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "tradersentinel",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0E27"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thronos.tradersentinel",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Used for QR code scanning",
        "NSFaceIDUsageDescription": "Used for secure authentication"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0E27"
      },
      "package": "com.thronos.tradersentinel",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.VIBRATE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366F1"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "trader-sentinel-thronos"
      },
      "apiUrl": "https://trader-sentinel.onrender.com",
      "thronosGatewayUrl": "https://gateway.thronos.io",
      "walletConnectProjectId": "YOUR_WALLETCONNECT_PROJECT_ID"
    }
  }
}
